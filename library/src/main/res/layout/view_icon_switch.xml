<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="?colorPrimary"
    tools:parentTag="android.widget.FrameLayout"
    tools:targetApi="lollipop">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_oval"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left"
            android:layout_width="@dimen/switch_icon_size"
            android:layout_height="@dimen/switch_icon_size"
            android:padding="@dimen/icon_padding"
            tools:tint="?colorAccent" />

        <ImageView
            android:id="@+id/right"
            android:layout_width="@dimen/switch_icon_size"
            android:layout_height="@dimen/switch_icon_size"
            android:padding="@dimen/icon_padding"
            tools:tint="?colorAccent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/indicator"
        android:layout_width="@dimen/switch_indicator_icon_size"
        android:layout_height="@dimen/switch_indicator_icon_size"
        android:background="@drawable/shape_circle"
        android:elevation="@dimen/indicator_elevation"
        android:orientation="horizontal"
        tools:backgroundTint="@android:color/black">

        <ImageView
            android:id="@+id/left_mask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:elevation="@dimen/indicator_elevation"
            android:padding="@dimen/indicator_icon_padding"
            tools:tint="@android:color/white" />

        <ImageView
            android:id="@+id/right_mask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:elevation="@dimen/indicator_elevation"
            android:padding="@dimen/indicator_icon_padding"
            tools:tint="@android:color/white" />

    </LinearLayout>

</merge>
